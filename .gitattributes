# Auto detect text files and perform LF normalization
* text=auto

# JavaScript files should always use LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# JSON files should use LF
*.json text eol=lf

# Package files
package.json text eol=lf
package-lock.json text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.env text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Ensure Windows batch files use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files should not be normalized
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.xlsx binary
*.xls binary
